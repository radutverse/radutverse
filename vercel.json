{
  "version": 2,
  "buildCommand": "npm run build",
  "builds": [
    {
      "src": "dist/spa",
      "use": "@vercel/static"
    },
    {
      "src": "api/index.ts",
      "use": "@vercel/node"
    }
  ],
  "rewrites": [
    {
      "source": "/api/(.*)",
      "destination": "/api/index?path=:1"
    }
  ],
  "routes": [
    {
      "src": "^/(?!api)(.*)$",
      "dest": "/index.html",
      "status": 200
    }
  ]
}
