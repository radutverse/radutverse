{
  "version": 2,
  "buildCommand": "npm run build:client",
  "installCommand": "pnpm install --no-frozen-lockfile",
  "routes": [
    {
      "handle": "filesystem"
    },
    {
      "src": "/api/(.*)",
      "status": 404
    },
    {
      "src": "/(.*)",
      "dest": "/index.html"
    }
  ]
}
